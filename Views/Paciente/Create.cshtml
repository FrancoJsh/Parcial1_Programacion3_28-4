@model Parcial1_Programacion3_28_4.Models.Paciente

@{
    ViewData["Title"] = "Apartado de nuevo paciente";
}

<h1>Agregar Paciente</h1>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @* <label asp-for="NombrePaciente" class="control-label"></label> *@
                Nombre del paciente
                <input asp-for="NombrePaciente" class="form-control" />
                <span asp-validation-for="NombrePaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* <label asp-for="ObraSocialId" class="control-label"></label> *@
                Obra Social:
                <select asp-for="ObraSocialId" class ="form-control" asp-items="ViewBag.ObrasSociales"></select>
            </div>
            <div class="form-group">
                <label asp-for="Edad" class="control-label"></label>
                <input asp-for="Edad" class="form-control" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sintomas" class="control-label"></label>
                <input asp-for="Sintomas" class="form-control" />
                <span asp-validation-for="Sintomas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar Paciente" class="btn btn-primary" />
            </div>
        </form>
        @if (ViewBag.Error != null)
        {
            @ViewBag.Error
        }
    </div>
</div>

<div>
    <a asp-action="ListaPaciente">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
